                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- end navbar-header -->
            <!-- begin header-nav -->
            <ul class="navbar-nav navbar-right">
                <li class="dropdown navbar-user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">

                        <h4 class="d-none d-md-inline">Opciones</h4> <b class="caret"></b>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="@Url.Action("LogOut", "Login")" class="dropdown-item">Cerrar Sesion</a>
                    </div>
                </li>
            </ul>
            <!-- end header-nav -->
        </div>
        <!-- end #header -->

        <div class="container-fluid">
            <h1>
                Reporte Comparativo
                <small class="text-muted">RRHH</small>
            </h1>
            <p>Reporte que compara datos y variables de un determinado mes con el anterior.</p>
            <hr />
            <!--SELECT MES-->
            <h5>Filtrar reporte</h5>
            <div class="dropdown">
                <!--GET PERIODO // En la base de datos hay que actualizar el periodo de la bd de softland. es a 24 meses-->
                <select class="browser-default custom-select " id="selectMeses" onchange="valor(this)">
                    @for (int i = 0; i < periodo.Count; i++)
                    {
                        if (@periodo[i].mes == "Enero" || @periodo[i].id == 1)
                        {
                            <optgroup label="@periodo[i].ano"></optgroup>
                        }
                    <option value="@periodo[i].id">@periodo[i].mes - @periodo[i].ano</option>                        
                    }
                </select>
            </div>
            <br /><br />
            <!--Listas-->
            <div class="row">
                <div class="col-sm">
                    <div class="row">
                        <div class="col-s">
                            <h4>Variables Softland</h4>
                        </div>
                        <div class="col-s">
                            <input class="form-control form-control-sm" type="text" id="myInput" onkeyup="Buscar('myInput','list-variables')" placeholder="Buscar .." title="Type in a name">
                        </div>
                    </div>
                    <ul class="list-group" id="list-variables">
                        @for (var i = 0; i < variables.Count; i++)
                        {
                            <li class="list-group-item list-group-item-light"><a href="#">@variables[i].codVariable - @variables[i].descripcion</a></li>
                        }
                    </ul>
                </div>
                <div class="col-sm">
                    <div class="row">
                        <div class="col-s">
                            <h4>Variables Reporte</h4>
                        </div>
                        <div class="col-s">
                            <input class="form-control form-control-sm" type="text" id="myInput2" onkeyup="Buscar('myInput2','list-reporte')" placeholder="Buscar .." title="Type in a name">
                        </div>
                    </div>
                    <ul class="list-group" id="list-reporte">
                        @for (var i = 0; i < variablesReporte.Count; i++)
                        {
                            <li class="list-group-item list-group-item-light"><a href="#">@variablesReporte[i].codVariable - @variablesReporte[i].descripcion</a></li>
                        }
                    </ul>
                </div>
            </div>
            <button id="btnGenerar" type="button" class="btn btn-success" onclick="location.reload()">Generar Reporte</button>
            <hr />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm">
                        <h2 id="textoReporteMes"></h2>
                    </div>
                    <div class="col-sm">
                        <input id="Buscar" class="form-control col-md-4 light-table-filter" data-table="order-table" type="text" placeholder="Buscar .." />
                    </div>

                </div>
                <div id="divScroll">
                    <table id="tabla" border="1" class="table order-table">
                        <thead>
                            <tr>
                                <th>Num Ficha</th>
                                <th>Nombre</th>
                                <th>RUT</th>
                                <th>AFP</th>
                                <th>%AFP</th>
                                <th>ISAPRE</th>
                                <th>PACTADO ISAPRE</th>
                            </tr>
                        <tbody>
                            <tr></tr>
                        </tbody>
                    </table>
                </div>
                <hr />
                <div>
                    <button id="Descarga" type="button" class="btn btn-success">EXCEL</button>
                    <button id="Descarga" type="button" class="btn btn-danger">PDF</button>
                </div>
            </div>
